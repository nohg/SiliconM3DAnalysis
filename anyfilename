# equivalent width differences
# eqw_NLTE3d_diff_LTE3d_eqws = np.subtract(NLTE3d_eqws, LTE3d_eqws)
# eqw_NLTE3d_diff_NLTE1d_eqws = np.subtract(NLTE3d_eqws, NLTE1d_eqws)
