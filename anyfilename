    ax[i].grid(axis='y')

    ax[i].set_title(f'Si {wavelengths[i]:.2f} Ã')
    ax[i].set_ylabel('Norm. Intensity')
    ax[i].set_xlabel('Î», Ã')

    plt.sca(ax[i])

    plt.xlim((m3d_centre_wavelengths[i]-0.25), (m3d_centre_wavelengths[i]+0.25))
    plt.ylim(0.4,1.1)    
