55/132:
def get_majorlines(thisrun):

    majorlines = []
    for i, thisline in enumerate(thisrun.line):
        if thisline.nnu > 80:
            majorlines.append(thisline)
    return majorlines
55/133:
def get_lines(thisrun, krs):
    lines = []
    for kr in krs:
        lines.append(thisrun.line[kr])
    return lines
