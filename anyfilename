    ax[i].set_xlabel('mu')
    ax[i].set_ylabel('Rel. abundance, dex')
    ax[i].set_title(f' IAG spectrum, Î»={np.take(m3d_centre_wavelengths,[0,3,4])[i]}')
    ax[i].set_ylim(7.47, 7.63)
    ax[i].legend(frameon=1)
plt.tight_layout()
