labels = [ '1D LTE', '3D NLTE', '1D LTE new f val', '3D NLTE new f val']
runobjects = [m3d(thisrun, lines=major_krs, conts=[]) for thisrun in runfiles]
linesobj = [get_lines(thisrunobj, major_krs) for thisrunobj in runobjects]
