164/9:
def ax_text(i,j, ax, posx, posy, color='k'):
    
    d = {'3D NLTE Ab. cor.:': np.round(corrections[i,j],4)
        }
    
    add_text_to_ax(posx, posy, nice_string_output(d), ax, fontsize=8, color=color)
    return None
