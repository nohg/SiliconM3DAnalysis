def get_majorlines(thisrun):

    majorlines = []
    for i, thisline in enumerate(thisrun.line):
        if thisline.nnu > 80:
            majorlines.append(thisline)
    return majorlines

def get_lines(thisrun):
    lines = []
    for _, thisline in enumerate(thisrun.line):
        lines.append(thisline)
    return lines
