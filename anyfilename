def ax_text(i, ax, posx, posy, color='k'):
    
    d = {'3D NLTE Abundance correction:': corrections[i]
        }
    
    add_text_to_ax(posx, posy, nice_string_output(d), ax, fontsize=10, color=color)
    return None
