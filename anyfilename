major_krs = [286, 291, 293, 299, 427, 457] # 292 and 302 removed - empty gaps

runfiles = ['runs/Si_marcs_LTE_mus/output/']#, 'runs/Si_stag_NLTE_5x5x230_mus/output/']
# labels = [ '1D LTE', '3D NLTE', '1D LTE', '3D NLTE']
