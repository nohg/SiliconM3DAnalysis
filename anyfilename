82/3:
sav_fname = pjoin('../data/spectra/1631885174310_iag_sun_Si.sav')
sav_data = readsav(sav_fname)
82/4:
def get_lines(thisrun, krs):
    lines = []
    for kr in krs:
        lines.append(thisrun.line[kr])
    return lines
