eqw_LTE3d_diff_LTE1d_eqws =  np.divide(np.abs(np.subtract(LTE3d_eqws, LTE1d_eqws)), LTE1d_eqws)*100
eqw_NLTE1d_diff_LTE1d_eqws = np.divide(np.abs(np.subtract(NLTE1d_eqws, LTE1d_eqws)), LTE1d_eqws)*100

